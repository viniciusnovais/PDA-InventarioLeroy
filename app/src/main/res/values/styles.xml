<resources>

    <!-- Application theme. -->
    <style
        name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimaryInverse">
            @color/common_google_signin_btn_text_dark_focused
        </item>
        <item name="android:spinnerItemStyle">@style/TextViewSpinnerItem</item>
        <item name="android:textColorPrimary">@color/common_plus_signin_btn_text_light_pressed</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="colorAccent">?attr/actionModeSplitBackground</item>
    </style>

    <style name="AppLeroyTheme" parent="AppBaseTheme" />

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>


</resources>
