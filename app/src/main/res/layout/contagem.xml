<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|bottom"
            android:src="@drawable/logo_leroy" />

        <TextView
            android:id="@+id/tvTituloTela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:text="Contagem"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etEndProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:drawableRight="@drawable/ic_search"
            android:focusable="true"
            android:inputType="number"
            android:maxLines="1"
            android:padding="5dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tvEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:padding="5dp"
        android:text="@string/endereco"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvDepto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:padding="5dp"
        android:text="@string/departamento"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvSetor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:padding="5dp"
        android:text="@string/setor"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnFechar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:background="@drawable/bg_button_white"
            android:stateListAnimator="@null"
            android:text="@string/fechar"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnExcluir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight=".33"
            android:background="@drawable/bg_button_white"
            android:stateListAnimator="@null"
            android:text="@string/excluir"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnZerar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight=".33"
            android:background="@drawable/bg_button_white"
            android:stateListAnimator="@null"
            android:text="@string/zerar"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="18dp" />

    </LinearLayout>


    <Spinner
        android:id="@+id/spinMetodoContagem"
        style="?android:attr/spinnerItemStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_spinner" />

    <ListView
        android:id="@+id/lvColeta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext"
        android:divider="@null"
        android:dividerHeight="0dp">

    </ListView>

</LinearLayout>
