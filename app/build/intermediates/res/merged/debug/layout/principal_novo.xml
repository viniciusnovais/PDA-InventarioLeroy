<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_leroy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="@string/envio"
            android:textColor="@color/color_gray_dark_textview"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnContagem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/bg_button"
                android:drawableBottom="@drawable/ic_list_with_dots"
                android:text="Contagem"
                android:padding="5dp"
                android:textColor="@color/primary_material_light"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnAuditoria"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/bg_button"
                android:drawableBottom="@drawable/ic_list"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:text="Auditoria"
                android:textColor="@color/primary_material_light"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDivergencia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/bg_button"
                android:drawableBottom="@drawable/ic_minus"
                android:padding="5dp"
                android:text="Divergência"
                android:textColor="@color/primary_material_light"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btnContFinal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/bg_button"
                android:drawableBottom="@drawable/ic_listing_option"
                android:text="Cont.Final"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primary_material_light"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnExportacao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/bg_button"
                android:drawableBottom="@drawable/ic_export"
                android:padding="5dp"
                android:text="Exportação"
                android:textColor="@color/primary_material_light"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btnImportacao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@drawable/bg_button"
                android:drawableBottom="@drawable/ic_import"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:text="Importação"
                android:textColor="@color/primary_material_light"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

