<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_leroy" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/envio"
            android:textSize="18dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnContagem"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/bg_button_principal"
            android:drawableLeft="@drawable/ic_list_with_dots"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:stateListAnimator="@null"
            android:text="Contagem"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/black_prinipal"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnAuditoria"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_button_principal"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:stateListAnimator="@null"
            android:text="Auditoria"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/black_prinipal"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnDivergencia"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_button_principal"
            android:drawableLeft="@drawable/ic_minus"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:stateListAnimator="@null"
            android:text="Divergência"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/black_prinipal"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnContFinal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_button_principal"
            android:drawableLeft="@drawable/ic_listing_option"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:stateListAnimator="@null"
            android:text="Contagem Final"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/black_prinipal"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnExportacao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_button_principal"
            android:drawableLeft="@drawable/ic_export"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:stateListAnimator="@null"
            android:text="Exportação"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/black_prinipal"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnImportacao"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_button_principal"
            android:drawableLeft="@drawable/ic_import"
            android:drawablePadding="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:stateListAnimator="@null"
            android:text="Importação"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/black_prinipal"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>


